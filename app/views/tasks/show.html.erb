<div class="container">
  <div>
    <h1><%= @task.title %></h1>
  </div>

  <div>
    <%= link_to "Edit this task", edit_path %>
  </div>
</div>

<div class="description-box">
  <%= @task.details %>
</div>
<p class="completion-p">
  <input type="checkbox" <%= 'checked' if @task.completed == true %> >
  <%= @task.completed ? 'This task is completed' : 'This task is not completed yet' %>
</p>
<%= link_to "Back to list", tasks_path %>
